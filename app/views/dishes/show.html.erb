<div class="page-header">
  <h1>Dish #<%= @dish.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @dish.name %></dd>

  <dt>Cuisine</dt>
  <dd><%= @cuisine.name %></dd>

</dl>

<dl class="dl-horizontal">

  <dt>Favorites</dt>
  <dd>
    <ul>
      <% Favorite.where({ :dish_id => @dish.id }).each do |favorite| %>
        <li>
          <%= User.find_by({ :id => favorite.user_id }).username.capitalize %>
          likes these at
          <%=  Venue.find_by({ :id => favorite.venue_id }).name %>
        </li>
      <% end %>
    </ul>
  </dd>
</dl>
